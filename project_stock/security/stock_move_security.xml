<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <!-- Project Managers: can view and edit only stock moves associated to the analytic accounts they manage -->
        <record model="ir.rule" id="stock_move_project_manager_rule_write">
            <field name="name">Stock Move: project manager: EDIT only managed stock moves</field>
            <field name="model_id" ref="stock.model_stock_move"/>
            <field name="domain_force">[('analytic_account_id.manager_id', '=', user.id)]</field>
            <field name="groups" eval="[(4,ref('project.group_project_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</openerp>
