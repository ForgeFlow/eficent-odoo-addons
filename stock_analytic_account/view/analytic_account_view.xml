<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    #---------------------------------------------------------------------------------------------------------
    # Extend the analytic account
    #---------------------------------------------------------------------------------------------------------
    <record model="ir.actions.act_window" id="act_analytic_account_2_stock_move">
        <field name="name">Stock Moves</field>
        <field name="res_model">stock.move</field>
        <field name="binding_model_id" ref="account.model_account_analytic_account" />
        <field name="binding_view_types">list,form</field>
        <field name="view_id" ref="stock_analytic.view_move_tree" />
    </record>

    <record
        id="view_account_analytic_account_form_stock_move_button"
        model="ir.ui.view"
    >
        <field name="name">account.analytic.account.form.stock.move</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form" />
        <field name="arch" type="xml">
            <xpath expr='//div[@name="button_box"]' position='inside'>
                <button
                    help="Stock Moves"
                    class="oe_inline oe_stat_button"
                    name="%(act_analytic_account_2_stock_move)d"
                    type="action"
                    icon="fa-exchange"
                    context="{'default_analytic_account_id': active_id,'search_default_analytic_account_id': active_id}"
                    groups="analytic.group_analytic_accounting"
                >
                    <span>Stock Moves</span>
                </button>
            </xpath>
        </field>
    </record>

    <record id="view_account_analytic_account_form_stock_move" model="ir.ui.view">
        <field name="name">account.analytic.account.form.stock.move</field>
        <field name="model">account.analytic.account</field>
        <field
            name="inherit_id"
            ref="analytic_location.view_account_analytic_account_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='location']" position="after">
                <group name="stock">
                    <field name="move_ids" nolabel="1" />
                </group>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="analytic_account_stock_move">
        <field name="name">Stock Moves</field>
        <field name="res_model">stock.move</field>
        <field name="binding_model_id" ref="account.model_account_analytic_account" />
        <field name="binding_view_types">list,form</field>
        <field name="context">
    {'default_analytic_account_id':active_id,'search_default_analytic_account_id':active_id}</field>
        <field name="view_id" ref="stock_analytic.view_move_tree" />
        <field
            name="groups_id"
            eval="[(4, ref('analytic.group_analytic_accounting'))]"
        />
    </record>


</odoo>
