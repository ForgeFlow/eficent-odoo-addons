<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">
        <!-- Project Managers: can view and edit only procurement orders associated to the analytic accounts they manage -->
        <record model="ir.rule" id="stock_move_project_manager_rule_write">
            <field name="name">Procurement Order: project manager: EDIT only managed procurement orders</field>
            <field name="model_id" ref="procurement.model_procurement_order"/>
            <field name="domain_force">[('analytic_account_id.manager_id', '=', user.id)]</field>
            <field name="groups" eval="[(4,ref('project.group_project_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</openerp>
