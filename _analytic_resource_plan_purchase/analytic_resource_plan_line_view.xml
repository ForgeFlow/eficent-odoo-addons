<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

            
        <act_window name="Create Purchase Orders"		    
		    res_model="analytic.resource.plan.line.make.purchase"
		    view_mode="form"
		    view_type="form"
		    target="new"        
            key2="client_action_multi"    
		    id="analytic_resource_plan_purchase.action_analytic_resource_plan_line_make_purchase"
		    view_id="analytic_resource_plan_purchase.view_analytic_resource_plan_line_make_purchase"
            groups="purchase.group_purchase_user"/>


        <record id="view_analytic_resource_plan_line_tree" model="ir.ui.view">
            <field name="name">analytic.resource.plan.line.tree</field>
            <field name="model">analytic.resource.plan.line</field>
               <field name="inherit_id" ref="analytic_resource_plan.view_analytic_resource_plan_line_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <xpath expr='//field[@name="product_id"]' position='after'>
                    <field name="has_active_order"/>
                </xpath>
            </field>
        </record>

       <record id="view_analytic_resource_plan_line_purchase_order_form" model="ir.ui.view">
            <field name="name">analytic.resource.plan.line.purchase.order.form</field>
            <field name="model">analytic.resource.plan.line</field>
            <field name="inherit_id" ref="analytic_resource_plan.view_analytic_resource_plan_line_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr='//page[@name="notes"]' position='after'>
                    <page string="Purchase orders" name="purchases">
                        <field name="order_line_ids"/>
                    </page>
                </xpath>
            </field>
       </record>

	</data>

</openerp>
