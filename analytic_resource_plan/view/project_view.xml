<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="edit_project" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <xpath expr='//div[@name="button_box"]' position='inside'>
                <button
                    help="Resource planning lines"
                    class="oe_inline oe_stat_button"
                    name="%(action_analytic_resource_plan_line_open_form)d"
                    type="action"
                    icon="fa-shopping-cart"
                    context="{'default_account_id': analytic_account_id,'search_default_account_id': analytic_account_id}"
                    groups="project.group_project_user,project.group_project_manager"
                >
                    <field name="resource_count" widget="statinfo" string="Resources" />
                </button>
            </xpath>
        </field>
    </record>

    <record id="resource_plan_line_action_project" model="ir.actions.act_window">
        <field name="name">Resource plan lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">analytic.resource.plan.line</field>
        <field name="view_mode">form</field>
        <field
            name="context"
        >{'default_account_id': analytic_account_id,'search_default_account_id': [analytic_account_id]}</field>
        <field name="groups_id" eval="[(4, ref('project.group_project_user'))]" />
    </record>

</odoo>
